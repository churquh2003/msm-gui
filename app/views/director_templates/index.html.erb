<h1>List of all directors</h1>

<hr>

<form action="/insert_director" method="post">
  <label for="name_director">Name</label>
  <input type="text" name="name_director" id="name_director">

  <label for="dob_director">Dob</label>
  <input type="date" name="dob_director" id="dob_director">

  <label for="bio_director">Bio</label>
  <input type="text" name="bio_director" id="bio_director">

  <label for="image_director">Image</label>
  <input type="text" name="image_director" id="image_director">

  <button>Create director</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th>Actions</th>
  </tr>
  <% @list_of_directors.each do |director| %>
    <tr>
      <td><%= director.id %></td>
      <td><img src="<%= director.image %>" style="width:250px;"></td>
      <td><%= director.name %></td>
      <td><%= director.dob %></td>
      <td>
        <a href="/directors/<%= director.id %>">Show details</a>
        <a href="/delete_director/<%= director.id %>">Delete</a>
      </td>
    </tr>
  <% end %>
</table>

